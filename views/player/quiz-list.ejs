<%- include("../header", {title: title}) %>
<div style="margin: 20px;">
  <p>Filter by tag:</p>
  <a href="/quiz/player?tag="><button class="btn btn-warning">All</button></a>
  <a href="/quiz/player?tag=General"><button class="btn btn-warning">General</button></a>
  <a href="/quiz/player?tag=Geography"><button class="btn btn-warning">Geography</button></a>
  <a href="/quiz/player?tag=History"><button class="btn btn-warning">History</button></a>
  <a href="/quiz/player?tag=Indonesia"><button class="btn btn-warning">Indonesia</button></a>
</div>

<table class="table table-dark table-striped-columns">
    <thead>
        <tr>
          <th scope="col">#</th>
          <th scope="col">Quiz Name</th>
          <th scope="col">Number Of Questions</th>
          <th scope="col">Tags</th>
          <th scope="col">Actions</th>
        </tr>
      </thead>
      <tbody>
        <% quizData.forEach((el, index) => { %>
          <tr>
            <th scope="row"><%= `${index + 1}` %></th>
            <td><%= el.name %></td>
            <td><%= el.totalQuestions %></td>
            <td>
              <%= el.Tags.map(tag => tag.name).join(", ") %>
            </td>
            <td>
                <a href="/quiz/player/<%= el.id %>/startQuiz"> 
                    <button type="button" class="btn btn-secondary">Play</button>
                </a>
            </td>          
          </tr>
        <% }) %>
      </tbody>
</table>
<%- include("../footer") %><