<%- include("../header", {title: title}) %>

<div style="margin: 20px">
  <a href="/quiz/admin/add"><button class="btn btn-primary">Tambah Quiz</button></a>
</div>

<div style="margin: 20px;">
  <p>Filter by tag:</p>
  <a href="/quiz/admin?tag="><button class="btn btn-warning">All</button></a>
  <a href="/quiz/admin?tag=General"><button class="btn btn-warning">General</button></a>
  <a href="/quiz/admin?tag=Geography"><button class="btn btn-warning">Geography</button></a>
  <a href="/quiz/admin?tag=History"><button class="btn btn-warning">History</button></a>
  <a href="/quiz/admin?tag=Indonesia"><button class="btn btn-warning">Indonesia</button></a>
</div>

<table class="table table-dark table-striped-columns">
    <thead>
        <tr>
          <th scope="col">#</th>
          <th scope="col">Quiz Name</th>
          <th scope="col">Number Of Questions</th>
          <th scope="col">Tags</th>
          <th scope="col">Actions</th>
        </tr>
      </thead>
      <tbody>
        <% quizData.forEach((el, index) => { %>
          <tr>
            <th scope="row"><%= `${index + 1}` %></th>
            <td><%= el.name %></td>
            <td><%= el.Questions.length %></td>
            <td>
              <%= el.Tags.map(tag => tag.name).join(", ") %>
            </td>

            <td>
                <a href="/quiz/admin/<%= el.id %>"> 
                    <button type="button" class="btn btn-secondary">Details</button>
                </a>
                <a href="/quiz/admin/<%= el.id %>/edit"> 
                    <button type="button" class="btn btn-primary">Edit</button>
                </a>
                <a href="/quiz/admin/<%= el.id %>/delete"> 
                    <button type="button" class="btn btn-outline-danger">Delete</button>
                </a>
            </td>          </tr>
        <% }) %>
      </tbody>
</table>
<%- include("../footer") %><