<%- include("../header", {title: title}) %>
<div>
    <h1>
        <%= selectedQuiz.name %>
    </h1>
    <p>
        <%= selectedQuiz.description %>
    </p>

      <div style="padding: 10px">
        <a href="/quiz/admin/<%= selectedQuiz.id %>/edit"><button class="btn btn-primary">Edit Quiz</button></a>
        <a href="/quiz/admin/<%= selectedQuiz.id %>/addQuestion"><button class="btn btn-primary">Add Question</button></a>
      </div>
</div>
<table class="table table-dark table-striped-columns">
    <thead>
        <tr>
          <th scope="col">#</th>
          <th scope="col">Question Name</th>
          <th scope="col">Actions</th>
        </tr>
      </thead>
      <tbody>
        <% selectedQuiz.Questions.forEach((el, index) => { %>
          <tr>
            <th scope="row"><%= `${index + 1}` %></th>
            <td><%= el.question %></td>
            <td>
                <a href="/quiz/admin/<%= selectedQuiz.id %>/<%= el.id %>/edit"> 
                    <button type="button" class="btn btn-primary">Edit</button>
                </a>
                <a href="/quiz/admin/<%= selectedQuiz.id %>/<%= el.id %>/delete"> 
                    <button type="button" class="btn btn-outline-danger">Delete</button>
                </a>
            </td>
          </tr>
        <% }) %>
      </tbody>
</table>
<%- include("../footer") %>